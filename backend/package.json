{
  "name": "cosmic-lord-backend",
  "version": "1.0.0",
  "description": "Backend server for Cosmic Lord game.",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.43.4",
    "cors": "^2.8.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run build"
    ]
  }
}
